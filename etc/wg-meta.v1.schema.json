{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/sirtoobii/wg-meta/wg-meta.v1.schema.json",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "attributes": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "Name": {
          "$ref": "#/definitions/mandatory"
        },
        "Disabled": {
          "$ref": "#/definitions/mandatory"
        },
        "Created": {
          "$ref": "#/definitions/optional"
        },
        "Description": {
          "$ref": "#/definitions/optional"
        },
        "Alias": {
          "$ref": "#/definitions/optional"
        }
      },
      "patternProperties": {
        "^X-[^\\s:]+$": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "mandatory": {
              "type": "boolean"
            }
          },
          "patternProperties": {
            "^x-[^\\s:]+$": {}
          },
          "required": [
            "mandatory"
          ]
        }
      },
      "required": [
        "Name"
      ]
    },
    "config": {
      "properties": {
        "comment-prefix": {
          "type": "string"
        },
        "separator": {
          "type": "string"
        }
      }
    }
  },
  "definitions": {
    "mandatory": {
      "type": "object",
      "properties": {
        "mandatory": {
          "type": "boolean",
          "enum": [
            true
          ]
        }
      }
    },
    "optional": {
      "type": "object",
      "properties": {
        "mandatory": {
          "type": "boolean",
          "enum": [
            false
          ]
        }
      }
    }
  }
}
